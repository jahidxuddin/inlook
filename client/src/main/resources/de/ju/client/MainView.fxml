<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="de.ju.client.controller.ClientController">
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.5">
            <!-- Sidebar for email list -->
            <VBox style="-fx-background-color: #F3F3F3;" VBox.vgrow="ALWAYS">
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER"
                            VBox.vgrow="ALWAYS" style="-fx-background: #F3F3F3;">
                    <ListView fx:id="emailListView" style="
                        -fx-background-color: #F3F3F3;
                        -fx-control-inner-background: #F3F3F3;
                        -fx-background-insets: 0;
                        -fx-selection-bar: lightgray; /* Selected item background color */
                        -fx-selection-bar-text: black; /* Selected item text color */
                    ">
                        <VBox.vgrow>ALWAYS</VBox.vgrow>
                    </ListView>
                </ScrollPane>
            </VBox>

            <!-- Right content area for displaying the selected email -->
            <VBox fx:id="emailContentArea" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS" visible="false"
                  managed="false">
                <VBox style="-fx-padding: 20px;" spacing="10">
                    <Label fx:id="emailTitleLabel"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"/>
                    <HBox style="-fx-spacing: 10px;">
                        <Label fx:id="emailSenderLabel"
                               style="-fx-font-size: 14px; -fx-text-fill: #777777; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"/>
                        <Label fx:id="emailDateLabel"
                               style="-fx-font-size: 14px; -fx-text-fill: #777777; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"/>
                    </HBox>
                </VBox>

                <TextArea fx:id="emailContentTextArea" wrapText="true" editable="false"
                          style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; -fx-background-color: #F9F9F9; -fx-border-width: 0;"
                          VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>

    <!-- Bottom bar -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <Button prefHeight="50.0" prefWidth="50.0"
                    style="-fx-font-size: 22px; -fx-background-color: #0078d4; -fx-background-radius: 50%; -fx-text-fill: white;"
                    text="âŸ³">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button prefHeight="25.0" prefWidth="50.0"
                    style="-fx-font-size: 24px; -fx-background-color: #0078d4; -fx-background-radius: 50%; -fx-text-fill: white;"
                    text="+"
                    onAction="#showEmailComposer"
            >
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
