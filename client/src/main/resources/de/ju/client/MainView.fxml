<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.ju.client.ClientController">
    <!-- Left Sidebar for email list -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #F3F3F3;" VBox.vgrow="NEVER">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>

            <!-- Use ScrollPane to avoid scrollbar on VBox itself -->
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER">
                <!-- ListView to display emails -->
                <ListView fx:id="emailListView" style="-fx-background-color: #ffffff; -fx-border-radius: 5px;">
                    <prefHeight>400</prefHeight> <!-- Maximale Höhe der ListView festlegen -->
                </ListView>
            </ScrollPane>
        </VBox>
    </left>

    <!-- Main Content for opened email view -->
    <center>
        <VBox spacing="15" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label fx:id="welcomeText" text="Geöffnete Mail" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: Arial, sans-serif; -fx-text-fill: #333333;"/>
            <Label fx:id="fromLabel" text="Von: email@adresse.com" style="-fx-font-size: 14px; -fx-font-family: Arial, sans-serif; -fx-text-fill: #777777;"/>
            <Label fx:id="toLabel" text="An: ..." style="-fx-font-size: 14px; -fx-font-family: Arial, sans-serif; -fx-text-fill: #777777;"/>
            <Label fx:id="titleLabel" text="Titel: ..." style="-fx-font-size: 14px; -fx-font-family: Arial, sans-serif; -fx-text-fill: #777777;"/>
            <Label fx:id="messageLabel" text="Nachricht: ..." style="-fx-font-size: 14px; -fx-font-family: Arial, sans-serif; -fx-text-fill: #333333;"/>
        </VBox>
    </center>

    <!-- Bottom Right Icon Button (for actions or navigation) -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="+" style="-fx-font-size: 24px; -fx-background-color: #0078d4; -fx-text-fill: white; -fx-background-radius: 50%; -fx-padding: 10;"/>
        </HBox>
    </bottom>
</BorderPane>
